<?xml version="1.0" encoding="UTF-8" ?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">

    <package>pt.ufp.inf.esof.projeto.modelos</package>
    <entity class="Cliente">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="username">
                <column name="username"/>
            </basic>
            <basic name="password">
                <column name="password"/>
            </basic>
            <one-to-many name="projetos" mapped-by="cliente"><cascade><cascade-all/></cascade></one-to-many>
        </attributes>
    </entity>
    <entity class="TarefaPrevista">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="nome">
                <column name="nome"/>
            </basic>
            <many-to-one name="projeto"/>
            <many-to-one name="empregado"/>
            <one-to-many name="tarefaEfetivas" mapped-by="tarefaPrevista"><cascade><cascade-all/></cascade></one-to-many>
        </attributes>
    </entity>
    <entity class="TarefaEfetiva">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="nome">
                <column name="nome"/>
            </basic>
            <basic name="concluida">
                <column name="concluida"/>
            </basic>
            <basic name="periodoTempoTrabalhado">
                <column name = "periodoTempoTrabalhado"/>
            </basic>
            <basic name="progresso">
                <column name = "progresso" />
            </basic>
            <many-to-one name="tarefaPrevista"/>
        </attributes>
    </entity>
    <entity class="Projeto">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="nome">
                <column name="nome"/>
            </basic>
            <many-to-one name="cliente"/>
            <one-to-many name="tarefas" mapped-by="projeto"><cascade><cascade-all/></cascade></one-to-many>
        </attributes>
    </entity>
    <entity class="Empregado">
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="email">
                <column name="email"/>
            </basic>
            <basic name="cargo">
                <column name="cargo"/>
            </basic>
            <one-to-many name="tarefa" mapped-by="empregado"><cascade><cascade-all/></cascade></one-to-many>
        </attributes>
    </entity>
    <mapped-superclass class="Utilizador">
    </mapped-superclass>
</entity-mappings>